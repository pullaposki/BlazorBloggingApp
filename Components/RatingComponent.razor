@for (var i = 1; i <= 5; i++)
{
    var ratingValue = i;
    <span @onclick="(() => SetRating(ratingValue))">
        @(i <= Value ? "★" : "☆")
    </span>
}

@code {
    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public EventCallback<int> ValueChanged { get; set; }

    private void SetRating(int rating)
    {
        Value = rating;
        ValueChanged.InvokeAsync(Value);
    }
}